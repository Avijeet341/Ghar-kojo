        <item name="android:track">@drawable/neumorph_switch_track</item>
        <item name="android:thumb">@drawable/neumorph_switch_thumb</item>
    </style>

    <style name="CustomRectangularButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/custom_search_icon</item>
        <item name="closeIcon">@drawable/custom_close_icon</item>
        <item name="android:textColorHint">@color/expBlue</item>
        <item name="android:textColor">@color/expBlue</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="queryHint">Search...</item>
        <item name="searchHintIcon">@drawable/custom_search_hint_icon</item>
