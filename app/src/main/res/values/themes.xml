<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GharKhojoo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/expBlue</item>
        <item name="colorPrimary">@color/expBlue</item>
    </style>


    <style name="Base.Theme.GharKhojo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:statusBarColor">@color/expBlue</item>
        <item name="colorPrimary">@color/expBlue</item>
        <!-- Add other customizations as needed -->
    </style>
    <style name="Theme.GharKhojo" parent="Base.Theme.GharKhojo" />

    <style name="GharKhojo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/your_status_bar_color</item>
        <item name="colorPrimary">@color/your_status_bar_color</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="Theme.DarkOwner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="loadData" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/expBlue</item>
        <item name="android:progressTint">@color/expBlue</item>
    </style>

    <style name="UploadProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/accent_color</item>
        <item name="android:progressTint">@color/accent_color</item>
    </style>

</resources>