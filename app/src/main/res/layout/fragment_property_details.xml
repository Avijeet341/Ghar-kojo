<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".Fragments.OwnerFragments.PropertyDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:contentDescription="Back" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Details"
            android:textColor="#FFEB3B"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2C2C2C"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Built up Area"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="#FFEB3B"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="in sq.ft.(1200 sq.ft.)"
                    app:hintTextColor="#FFEB3B"
                    android:textColorHint="#CCCCCC"
                    app:boxStrokeColor="#FFEB3B"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTotalSpace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:text="Floor Position"
                    android:textColor="#FFEB3B" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="eg.2nd Floor"
                    app:hintTextColor="#FFEB3B"
                    android:textColorHint="#CCCCCC"
                    app:boxStrokeColor="#FFEB3B"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFloorPosition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lock in period"
                    android:textColor="#FFEB3B"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="in Months(6 Months etc.)"
                    app:hintTextColor="#FFEB3B"
                    android:textColorHint="#CCCCCC"
                    app:boxStrokeColor="#FFEB3B"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLockInPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/spinnerFurnishing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Furnishing"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:hintTextColor="#FFEB3B"
                    android:textColorHint="#CCCCCC"
                    app:boxStrokeColor="#FFEB3B"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginTop="16dp">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textColor="#FFFFFF"/>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Number of Bed Room"
                        android:textColor="#FFFFFF"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecreaseBedrooms"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_minus"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="#2C2C2C"
                        app:backgroundTint="#FFEB3B"
                        app:cornerRadius="20dp"/>

                    <TextView
                        android:id="@+id/tvBedroomCount"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncreaseBedrooms"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/add_icon"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="#2C2C2C"
                        app:backgroundTint="#FFEB3B"
                        app:cornerRadius="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Number of Wash Room"
                        android:textColor="#FFFFFF"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecreaseWashrooms"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_minus"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="#2C2C2C"
                        app:backgroundTint="#FFEB3B"
                        app:cornerRadius="20dp" />
                    <TextView
                        android:id="@+id/tvWashroomCount"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncreaseWashrooms"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/add_icon"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="#2C2C2C"
                        app:backgroundTint="#FFEB3B"
                        app:cornerRadius="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Number of Balcony"
                        android:textColor="#FFFFFF"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecreaseBalconies"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_minus"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="#2C2C2C"
                        app:backgroundTint="#FFEB3B"
                        app:cornerRadius="20dp" />
                    <TextView
                        android:id="@+id/tvBalconyCount"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncreaseBalconies"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/add_icon"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="#2C2C2C"
                        app:backgroundTint="#FFEB3B"
                        app:cornerRadius="20dp" />
                </LinearLayout>


                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbDiningSpace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Available Dining Space"
                    android:textColor="#FFFFFF"
                    app:buttonTint="#FFEB3B"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Benefits"
            android:textColor="#FFEB3B"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2C2C2C"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchLiftService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lift Service"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="#FFFFFF"
                    app:track="@drawable/neumorph_switch_track"
                    android:thumb="@drawable/neumorph_switch_thumb"
                    android:layout_marginBottom="16dp"
                    app:switchPadding="12dp"
                    android:textSize="16sp"
                    android:theme="@style/CustomSwitchStyle"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchGeneratorService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Generator Service"
                    android:textColor="#FFFFFF"
                    app:track="@drawable/neumorph_switch_track"
                    android:thumb="@drawable/neumorph_switch_thumb"
                    android:layout_marginBottom="16dp"
                    app:switchPadding="12dp"
                    android:textSize="16sp"
                    android:theme="@style/CustomSwitchStyle"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchGasService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gas Service"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="#FFFFFF"
                    app:track="@drawable/neumorph_switch_track"
                    android:thumb="@drawable/neumorph_switch_thumb"
                    android:layout_marginBottom="16dp"
                    app:switchPadding="12dp"
                    android:textSize="16sp"
                    android:theme="@style/CustomSwitchStyle"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchInternetWifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Security Gaurd"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="#FFFFFF"
                    app:track="@drawable/neumorph_switch_track"
                    android:thumb="@drawable/neumorph_switch_thumb"
                    android:layout_marginBottom="16dp"
                    app:switchPadding="12dp"
                    android:textSize="16sp"
                    android:theme="@style/CustomSwitchStyle"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchParking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parking"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="#FFFFFF"
                    app:track="@drawable/neumorph_switch_track"
                    android:thumb="@drawable/neumorph_switch_thumb"
                    android:layout_marginBottom="16dp"
                    app:switchPadding="12dp"
                    android:textSize="16sp"
                    android:theme="@style/CustomSwitchStyle"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Next"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#2C2C2C"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:elevation="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Upload"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#2C2C2C"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:elevation="4dp"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
